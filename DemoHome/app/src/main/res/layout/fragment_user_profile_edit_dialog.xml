<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:minWidth="500dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.fragments.userfragments.UserProfileEditFragment">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/userprofileedit_widgetedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text=""
            android:layout_height="wrap_content"
            android:id="@+id/userprofileedit_txtfieldedited"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/userprofileedit_btndone"
        android:text="DONE"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:background="#33B"
        android:textColor="#FFF"/>


</LinearLayout>
