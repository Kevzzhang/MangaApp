<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="16dp"
              android:orientation="vertical"
             tools:context="com.example.davidbezalellaoli.demohome.view.fragments.auth.RegisterFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/ic_sixtyone"/>

        <android.support.design.widget.TextInputLayout
            android:id='@+id/input_layout_username'
            android:layout_width='match_parent'
            android:layout_height='wrap_content'
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType='text'
                android:hint='Username'
                android:textSize="15dp"
                android:ems='10'
                android:id='@+id/reg_txtname'
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id='@+id/input_layout_email'
            android:layout_width='match_parent'
            android:layout_height='wrap_content'
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType='textEmailAddress'
                android:hint='Email'
                android:textSize="15dp"
                android:ems='10'
                android:id='@+id/reg_txtemail'
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id='@+id/input_layout_password'
            android:layout_width='match_parent'
            android:layout_height='wrap_content'
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType='textPassword'
                android:hint='Password'
                android:textSize="15dp"
                android:ems='10'
                android:id='@+id/reg_txtpassword'
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id='@+id/input_layout_repassword'
            android:layout_width='match_parent'
            android:layout_height='wrap_content'
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType='textPassword'
                android:hint='Re-Password'
                android:textSize="15dp"
                android:ems='10'
                android:id='@+id/reg_txtrepassword'
                />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="I already have an account. Sign In NOW!"
            android:paddingBottom="40dp"
            android:paddingTop="40dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#1E88E5"
            android:id="@+id/reg_txtredirectlogin" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daftar"
            android:id="@+id/reg_btnregister"
            android:background="#2E7D32"
            android:textColor="#FFF"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>


</LinearLayout>
